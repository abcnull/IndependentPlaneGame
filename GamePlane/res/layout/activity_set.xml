<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgmain"
    tools:context=".SetActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/btnEasy"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnEasy"
        android:layout_marginTop="40dp"
        android:text="=飞机游戏="
        android:textColor="#FFE4B5"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/btnEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        
        android:onClick="onClick"
        android:background="@drawable/btn"
        android:text="简单模式" />

    <Button
        android:id="@+id/btnNormal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnEasy"
        android:layout_below="@+id/btnEasy"
        android:layout_marginTop="15dp"
        
        android:onClick="onClick"
        android:background="@drawable/btn"
        android:text="一般模式" />

    <Button
        android:id="@+id/btnElite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnNormal"
        android:layout_below="@+id/btnNormal"
        android:layout_marginTop="15dp"
        
        android:onClick="onClick"
        android:background="@drawable/btn"
        android:text="地狱模式" />

    <CheckBox
        android:id="@+id/btnSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:scaleX="1.2"
    	android:scaleY="1.2"
        
        android:layout_below="@+id/btnElite"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        
        android:onClick="onClick"
        android:checked="true"
        android:text="背景音乐" 
        android:textColor="#FFFAFA"/>
    
    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnElite"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        
        android:background="@drawable/btn"
        android:onClick="onClick"
        android:text="返回"/>

</RelativeLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgmain"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/btnGame"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnGame"
        android:layout_marginTop="40dp"
        android:text="=飞机游戏="
        android:textColor="#FFE4B5"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <Button
        android:id="@+id/btnGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
               
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="20dp"
        
        android:onClick="onClick"
        android:background="@drawable/btn"
        android:text="开始游戏" />   

    <Button
        android:id="@+id/btnSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnGame"
        android:layout_below="@+id/btnGame"
        android:layout_marginTop="15dp"
        
        android:background="@drawable/btn"
        android:onClick="onClick"
        android:text="设置" />

    <Button
        android:id="@+id/btnIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnSet"
        android:layout_below="@+id/btnSet"
        android:layout_marginTop="15dp"
        
        android:background="@drawable/btn"
        android:onClick="onClick"
        android:text="游戏说明" />

    <Button
        android:id="@+id/btnInf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnIntro"
        android:layout_below="@+id/btnIntro"
        android:layout_marginTop="15dp"
        
        android:background="@drawable/btn"
        android:onClick="onClick"
        android:text="制作人" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_alignLeft="@+id/btnInf"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        
        android:background="@drawable/btn"
        android:onClick="onClick"
        android:text="退出游戏" />

</RelativeLayout>